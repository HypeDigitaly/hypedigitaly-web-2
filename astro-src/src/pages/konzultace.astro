---
import PageLayout from '../layouts/PageLayout.astro';
import { translations, type Language } from '../scripts/translations';

const lang: Language = 'cs';
const t = translations[lang];
---

<PageLayout 
  title="Konzultace & Partnerství | HypeDigitaly - AI Poradenství"
  description="AI strategie na míru pro vaši firmu. Od jednorázové konzultace po dlouhodobé partnerství. Pomůžeme vám najít optimální cestu k AI transformaci."
  lang={lang}
>
  <!-- ==================== HERO SECTION ==================== -->
  <section class="relative max-w-7xl mx-auto px-6 pt-12 pb-24 overflow-hidden">
    <div class="text-center max-w-5xl mx-auto relative z-10">
      
      <!-- Badge -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.1s_both] inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/20 mb-8">
        <iconify-icon icon="solar:hand-shake-bold" class="text-green-400 text-lg"></iconify-icon>
        <span class="text-sm font-medium text-green-400">{t.consult_hero_badge}</span>
      </div>
      
      <!-- Headline -->
      <h1 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-4xl font-medium text-white tracking-tighter mb-8">
        <span>{t.consult_hero_headline_1}</span>
        <br class="hidden md:block">
        <span class="text-neutral-600 transition-colors hover:text-green-400 duration-500">{t.consult_hero_headline_2}</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg md:text-xl text-neutral-400 font-light max-w-3xl mx-auto leading-relaxed tracking-tight mb-12">
        {t.consult_hero_subheadline}
      </p>
    </div>
  </section>

  <!-- ==================== PRICING SECTION ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-5xl mx-auto mb-16">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-5xl lg:text-6xl text-3xl font-medium text-white tracking-tighter mb-8">
          Varianty spolupráce
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Quick Audit -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-white/10 transition-all">
          <div class="text-xs text-neutral-500 uppercase tracking-wider mb-2">Vstupní program</div>
          <h3 class="text-2xl font-bold text-white mb-2">AI Quick Audit</h3>
          <p class="text-neutral-500 mb-6">Jednorázová diagnostika procesu</p>
          <div class="text-3xl font-bold text-white mb-6">25 994 Kč</div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Hloubková analýza vybraného procesu
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Odhalení problematických míst
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Návrh technického řešení
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Výpočet návratnosti investice
            </li>
          </ul>
          <a href="/#kontakt" class="vf-button w-full !py-4" style="--vf-bg: #00A39A; --vf-hover-bg: #00C4B4; --vf-glow-rgb: 0, 196, 180;">
            <div class="vf-points-wrapper">
              <i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i>
              <i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i>
            </div>
            <span class="vf-inner">Objednat audit</span>
          </a>
        </div>

        <!-- AI Sprint -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] p-8 bg-gradient-to-br from-primary/10 via-[#0A0A0A] to-[#0A0A0A] border-2 border-primary/30 rounded-2xl hover:border-primary/50 transition-all relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 bg-primary text-white text-xs font-bold rounded-full">DOPORUČUJEME</div>
          <div class="text-xs text-primary uppercase tracking-wider mb-2">Implementační program</div>
          <h3 class="text-2xl font-bold text-white mb-2">AI Sprint (30 dní)</h3>
          <p class="text-neutral-500 mb-6">Kompletní zavedení do provozu</p>
          <div class="text-3xl font-bold text-white mb-6">119 994 Kč</div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Nasazení nástrojů do workflow
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Praktické zaškolení týmu
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              AI roadmapa a poradenství
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              30denní prioritní podpora
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Záruka výsledků
            </li>
          </ul>
          <a href="/#kontakt" class="shiny-cta group">
            <span class="btn-content">
              <span class="font-semibold">Zahájit spolupráci</span>
            </span>
          </a>
        </div>

        <!-- AI Partner -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-white/10 transition-all">
          <div class="text-xs text-neutral-500 uppercase tracking-wider mb-2">Partnerský program</div>
          <h3 class="text-2xl font-bold text-white mb-2">AI Partner</h3>
          <p class="text-neutral-500 mb-6">Minimálně 3–6 měsíců</p>
          <div class="text-3xl font-bold text-white mb-1">99 994 Kč</div>
          <div class="text-neutral-500 text-sm mb-6">/měsíc</div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Ucelená AI strategie
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Správa inovační roadmapy
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Vzdělávání a adopce v týmu
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Koučink managementu
            </li>
            <li class="flex items-center gap-3 text-sm text-neutral-300">
              <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
              Pravidelný reporting výsledků
            </li>
          </ul>
          <a href="/#kontakt" class="vf-button w-full !py-4" style="--vf-bg: #00A39A; --vf-hover-bg: #00C4B4; --vf-glow-rgb: 0, 196, 180;">
            <div class="vf-points-wrapper">
              <i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i>
              <i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i><i class="vf-point"></i>
            </div>
            <span class="vf-inner">Sjednat partnerství</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== FREE CONSULTATION BANNER ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-16">
    <div class="max-w-4xl mx-auto px-6">
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] p-8 bg-gradient-to-r from-primary/10 to-green-500/10 border border-primary/30 rounded-2xl text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/20 border border-green-500/30 mb-6">
          <span class="text-sm font-bold text-green-400">ZDARMA</span>
        </div>
        <h3 class="text-3xl font-bold text-white mb-4">Konzultace ZDARMA</h3>
        <p class="text-neutral-400 mb-8 max-w-2xl mx-auto">Pojďme probrat vaše potřeby. 30minutový call bez závazku.</p>
        <a href="/#kontakt" class="shiny-cta max-w-md mx-auto group">
          <span class="btn-content">
            <span class="text-lg font-semibold tracking-tight">Rezervovat 30 min ZDARMA</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-white/80 group-hover:translate-x-1 transition-transform">
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

