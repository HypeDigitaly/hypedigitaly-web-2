---
import PageLayout from '../layouts/PageLayout.astro';
import { translations, type Language } from '../scripts/translations';
import faqData from '../data/faq.json';
import clientsData from '../data/clients.json';

const lang: Language = 'cs';
const t = translations[lang];
---

<PageLayout 
  title="HypeDigitaly | AI Transformation Partner - První AI agentura v ČR"
  description="HypeDigitaly je AI Transformation Partner. Pomáháme organizacím implementovat AI chatboty, voiceboty, AI agenty a automatizace. Jsme první společnost v ČR, která nasadila AI chatboty na krajské weby."
  lang={lang}
>
  <!-- ==================== HERO SECTION ==================== -->
  <section class="relative max-w-7xl mx-auto px-6 pt-12 pb-24 overflow-hidden">
    <div class="text-center max-w-5xl mx-auto relative z-10">
      
      <!-- Badge -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.1s_both] inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-8">
        <iconify-icon icon="solar:cup-star-bold" class="text-primary text-lg"></iconify-icon>
        <span class="text-sm font-medium text-primary">{t.hero_badge}</span>
      </div>
      
      <!-- Headline -->
      <h1 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-4xl font-medium text-white tracking-tighter mb-8">
        <span>{t.hero_headline_1}</span>
        <br class="hidden md:block">
        <span class="text-neutral-600 transition-colors hover:text-primary duration-500">{t.hero_headline_2}</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg md:text-xl text-neutral-400 font-light max-w-3xl mx-auto leading-relaxed tracking-tight mb-6">
        {t.hero_subheadline}
      </p>
      
      <!-- Sub-subheadline -->
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.35s_both] text-base text-neutral-500 font-medium max-w-2xl mx-auto leading-relaxed mb-12">
        {t.hero_subheadline_2}
      </p>
      
      <!-- Hero CTA -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] max-w-md mx-auto mb-8">
        <a href="#kontakt" class="shiny-cta group">
          <span class="btn-content">
            <span class="text-lg font-semibold tracking-tight">{t.hero_cta}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-white/80 group-hover:translate-x-1 transition-transform">
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </span>
        </a>
      </div>
      
      <!-- Trust Signals -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] flex flex-wrap items-center justify-center gap-6 text-sm text-neutral-500 font-medium mb-16">
        <span class="flex items-center gap-2">
          <iconify-icon icon="solar:cup-star-bold" class="text-primary text-lg"></iconify-icon>
          <span>{t.hero_trust_1}</span>
        </span>
        <span class="flex items-center gap-2">
          <iconify-icon icon="solar:bolt-bold" class="text-primary text-lg"></iconify-icon>
          <span>{t.hero_trust_2}</span>
        </span>
        <span class="flex items-center gap-2">
          <iconify-icon icon="solar:shield-check-bold" class="text-primary text-lg"></iconify-icon>
          <span>{t.hero_trust_3}</span>
        </span>
      </div>
      
      <!-- Stats Bar -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="text-center p-4 rounded-xl bg-primary/[0.08] border border-primary/30 hover:bg-primary/[0.12] hover:border-primary/40 transition-all duration-300 hover:scale-[1.02] cursor-default group">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-1 group-hover:text-white transition-colors"># 1</div>
          <div class="text-xs text-neutral-400 uppercase tracking-wider group-hover:text-neutral-300 transition-colors">{t.stat_first}</div>
        </div>
        <div class="text-center p-4 rounded-xl bg-white/[0.02] border border-white/5 hover:bg-primary/[0.05] hover:border-primary/20 transition-all duration-300 hover:scale-[1.02] cursor-default group">
          <div class="text-3xl md:text-4xl font-bold text-white mb-1 group-hover:text-primary transition-colors">3</div>
          <div class="text-xs text-neutral-500 uppercase tracking-wider group-hover:text-neutral-400 transition-colors">{t.stat_experience}</div>
        </div>
        <div class="text-center p-4 rounded-xl bg-white/[0.02] border border-white/5 hover:bg-primary/[0.05] hover:border-primary/20 transition-all duration-300 hover:scale-[1.02] cursor-default group">
          <div class="text-3xl md:text-4xl font-bold text-white mb-1 group-hover:text-primary transition-colors">5</div>
          <div class="text-xs text-neutral-500 uppercase tracking-wider group-hover:text-neutral-400 transition-colors">{t.stat_regions}</div>
        </div>
        <div class="text-center p-4 rounded-xl bg-white/[0.02] border border-white/5 hover:bg-primary/[0.05] hover:border-primary/20 transition-all duration-300 hover:scale-[1.02] cursor-default group">
          <div class="text-3xl md:text-4xl font-bold text-white mb-1 group-hover:text-primary transition-colors">30</div>
          <div class="text-xs text-neutral-500 uppercase tracking-wider group-hover:text-neutral-400 transition-colors">{t.stat_projects}</div>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== TRUSTED BY SECTION ==================== -->
  <section class="border-t border-white/5 bg-[#050505] py-16 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0s_both] text-center text-xs text-neutral-600 font-bold tracking-widest mb-10 uppercase">{t.trusted_title}</p>
      
      <!-- Logo Marquee -->
      <div class="relative overflow-hidden">
        <div class="flex animate-marquee w-max items-center">
          <!-- First set -->
          <div class="flex items-center md:gap-32 gap-16 md:pr-32 pr-16">
            {clientsData.clients.map((client) => (
              <a href={client.url} target="_blank" class="shrink-0">
                <img 
                  src={client.logo} 
                  alt={client.name_cs} 
                  class={`h-16 ${client.grayscale_class} ${client.invert ? 'brightness-0 invert' : ''}`}
                >
              </a>
            ))}
          </div>
          <!-- Duplicate for seamless loop -->
          <div class="flex items-center md:gap-32 gap-16 md:pr-32 pr-16">
            {clientsData.clients.map((client) => (
              <a href={client.url} target="_blank" class="shrink-0">
                <img 
                  src={client.logo} 
                  alt={client.name_cs} 
                  class={`h-16 ${client.grayscale_class} ${client.invert ? 'brightness-0 invert' : ''}`}
                >
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== PROBLEM SECTION ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Section Header -->
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">02</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40">{t.problem_tag}</div>
        <div class="hidden md:block text-right">{t.problem_label}</div>
      </div>

      <div class="text-center max-w-5xl mx-auto mb-16">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-3xl font-medium text-white tracking-tighter mb-8">
          <span>{t.problem_headline}</span>
          <span class="text-neutral-600 transition-colors hover:text-white duration-500">{t.problem_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-2xl mx-auto leading-relaxed">
          {t.problem_subheadline}
        </p>
      </div>

      <!-- Pain Points Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-red-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-red-500/10 flex items-center justify-center text-red-400 mb-4">
            <iconify-icon icon="solar:database-bold" class="text-2xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">{t.pain_1_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.pain_1_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-orange-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-400 mb-4">
            <iconify-icon icon="solar:settings-minimalistic-bold" class="text-2xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">{t.pain_2_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.pain_2_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-yellow-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-yellow-500/10 flex items-center justify-center text-yellow-400 mb-4">
            <iconify-icon icon="solar:chart-square-bold" class="text-2xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">{t.pain_3_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.pain_3_desc}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== WHAT WE DELIVER SECTION ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">03</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40">{t.deliver_tag}</div>
        <div class="hidden md:block text-right">{t.deliver_label}</div>
      </div>

      <div class="text-center max-w-5xl mx-auto mb-20">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-3xl font-medium text-white tracking-tighter mb-8">
          <span>{t.deliver_headline_1}</span>
          <span class="text-neutral-600 transition-colors hover:text-primary duration-500">{t.deliver_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-3xl mx-auto leading-relaxed">
          {t.deliver_subheadline}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] group relative p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6">
            <iconify-icon icon="solar:database-bold" class="text-3xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors">{t.deliver_1_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.deliver_1_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] group relative p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6">
            <iconify-icon icon="solar:magic-stick-3-bold" class="text-3xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors">{t.deliver_2_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.deliver_2_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] group relative p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6">
            <iconify-icon icon="solar:chart-2-bold" class="text-3xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors">{t.deliver_3_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.deliver_3_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] group relative p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6">
            <iconify-icon icon="solar:settings-minimalistic-bold" class="text-3xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors">{t.deliver_4_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.deliver_4_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both] group relative p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6">
            <iconify-icon icon="solar:users-group-rounded-bold" class="text-3xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors">{t.deliver_5_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.deliver_5_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.8s_both] group relative p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6">
            <iconify-icon icon="solar:graph-up-bold" class="text-3xl"></iconify-icon>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary transition-colors">{t.deliver_6_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed">{t.deliver_6_desc}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== PROCESS SECTION ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">04</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40">{t.process_tag}</div>
        <div class="hidden md:block text-right">{t.process_label}</div>
      </div>

      <div class="text-center max-w-5xl mx-auto mb-20">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-3xl font-medium text-white tracking-tighter mb-8">
          <span>{t.process_headline_1}</span>
          <span class="text-neutral-600 transition-colors hover:text-primary duration-500">{t.process_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-3xl mx-auto leading-relaxed">
          {t.process_subheadline}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="flex items-center justify-between mb-4">
            <span class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold">1</span>
            <span class="text-xs text-neutral-600 uppercase tracking-wider">Discovery</span>
          </div>
          <h3 class="text-lg font-bold text-white mb-2 group-hover:text-primary transition-colors">{t.phase_1_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed mb-4">{t.phase_1_desc}</p>
          <div class="pt-4 border-t border-white/5">
            <div class="text-xs text-primary font-medium">{t.phase_1_output}</div>
          </div>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="flex items-center justify-between mb-4">
            <span class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold">2</span>
            <span class="text-xs text-neutral-600 uppercase tracking-wider">AI Audit</span>
          </div>
          <h3 class="text-lg font-bold text-white mb-2 group-hover:text-primary transition-colors">{t.phase_2_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed mb-4">{t.phase_2_desc}</p>
          <div class="pt-4 border-t border-white/5">
            <div class="text-xs text-primary font-medium">{t.phase_2_output}</div>
          </div>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="flex items-center justify-between mb-4">
            <span class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold">3</span>
            <span class="text-xs text-neutral-600 uppercase tracking-wider">Strategie</span>
          </div>
          <h3 class="text-lg font-bold text-white mb-2 group-hover:text-primary transition-colors">{t.phase_3_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed mb-4">{t.phase_3_desc}</p>
          <div class="pt-4 border-t border-white/5">
            <div class="text-xs text-primary font-medium">{t.phase_3_output}</div>
          </div>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
          <div class="flex items-center justify-between mb-4">
            <span class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold">4</span>
            <span class="text-xs text-neutral-600 uppercase tracking-wider">Delivery</span>
          </div>
          <h3 class="text-lg font-bold text-white mb-2 group-hover:text-primary transition-colors">{t.phase_4_title}</h3>
          <p class="text-sm text-neutral-500 leading-relaxed mb-4">{t.phase_4_desc}</p>
          <div class="pt-4 border-t border-white/5">
            <div class="text-xs text-primary font-medium">{t.phase_4_output}</div>
          </div>
        </div>
      </div>

      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.8s_both] text-center text-sm text-neutral-500 mt-12 max-w-2xl mx-auto">
        {t.process_note}
      </p>
    </div>
  </section>

  <!-- ==================== SERVICES SECTION ==================== -->
  <section id="sluzby" class="bg-[#050505] border-t border-white/5 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">05</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40">{t.services_tag}</div>
        <div class="hidden md:block text-right">{t.services_label}</div>
      </div>

      <div class="text-center max-w-5xl mx-auto mb-16">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-3xl font-medium text-white tracking-tighter mb-8">
          <span>{t.services_headline_1}</span>
          <span class="text-neutral-600 transition-colors hover:text-primary duration-500">{t.services_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-2xl mx-auto leading-relaxed">
          {t.services_subheadline}
        </p>
      </div>

      <!-- How we work Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] flex items-start gap-4 p-6 bg-[#0A0A0A] border border-white/5 rounded-xl">
          <iconify-icon icon="solar:document-text-bold" class="text-2xl text-primary flex-shrink-0"></iconify-icon>
          <div>
            <h4 class="font-semibold text-white mb-1">{t.work_method_1_title}</h4>
            <p class="text-sm text-neutral-500">{t.work_method_1_desc}</p>
