---
import PageLayout from '../layouts/PageLayout.astro';
import { translations, type Language, getLocalizedHref } from '../scripts/translations';
import AdminPanelUnifiedSection from '../components/sections/AdminPanelUnifiedSection.astro';

// Server-side rendered page - detects language from URL param or cookie
export const prerender = false;

const url = Astro.url;
const langParam = url.searchParams.get('lang');

// Redirect ?lang=cs to clean URL (Czech is default - keeps URLs clean)
if (langParam === 'cs') {
  const cleanUrl = new URL(Astro.url);
  cleanUrl.searchParams.delete('lang');
  const redirectPath = cleanUrl.pathname + (cleanUrl.search || '') + (cleanUrl.hash || '');
  return Astro.redirect(redirectPath || '/', 301);
}

const cookieLang = Astro.cookies.get('preferredLanguage')?.value;
const lang: Language = (langParam === 'en' || langParam === 'cs') ? langParam : 
                       (cookieLang === 'en' || cookieLang === 'cs') ? cookieLang : 'cs';
const t = translations[lang];
const href = (path: string) => getLocalizedHref(path, lang);

// Set cookie if language was explicitly selected via URL param
if (langParam && (langParam === 'en' || langParam === 'cs')) {
  Astro.cookies.set('preferredLanguage', langParam, { 
    path: '/', 
    maxAge: 60 * 60 * 24 * 365, // 1 year
    sameSite: 'lax'
  });
}

// SEO: Constants
const SITE_URL = 'https://hypedigitaly.ai';

// SEO: Localized meta tags (FIX: was hardcoded in Czech)
const pageTitle = lang === 'cs' 
  ? "Příprava dat pro AI | HypeDigitaly - Čistá data, přesná AI"
  : "AI Data Preparation | HypeDigitaly - Clean Data, Accurate AI";
const pageDescription = lang === 'cs'
  ? "Připravíme vaše data pro AI tak, aby odpovídala přesně a bez halucinací. Zpracujeme libovolný formát, centralizujeme do jednoho místa. 99% přesnost."
  : "We prepare your data for AI to respond accurately without hallucinations. We process any format, centralize into one place. 99% accuracy.";

// SEO: Service Structured Data
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": lang === 'cs' ? "Příprava dat pro AI" : "AI Data Preparation",
  "description": pageDescription,
  "provider": {
    "@type": "Organization",
    "name": "HypeDigitaly s.r.o.",
    "url": SITE_URL
  },
  "url": `${SITE_URL}/priprava-dat`,
  "areaServed": {
    "@type": "Country",
    "name": "Czech Republic"
  },
  "serviceType": lang === 'cs' ? "Příprava dat" : "Data Preparation",
  "offers": [
    {
      "@type": "Offer",
      "name": lang === 'cs' ? "Hodinová sazba" : "Hourly Rate",
      "price": "2500",
      "priceCurrency": "CZK",
      "priceSpecification": {
        "@type": "UnitPriceSpecification",
        "price": "2500",
        "priceCurrency": "CZK",
        "unitText": lang === 'cs' ? "hodina" : "hour"
      }
    },
    {
      "@type": "Offer",
      "name": lang === 'cs' ? "Paušál za datový zdroj" : "Per Data Source",
      "price": "15000",
      "priceCurrency": "CZK"
    }
  ]
};

// SEO: BreadcrumbList
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": lang === 'cs' ? "Domů" : "Home",
      "item": SITE_URL
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": lang === 'cs' ? "Příprava dat pro AI" : "AI Data Preparation",
      "item": `${SITE_URL}/priprava-dat`
    }
  ]
};

// SEO: SoftwareApplication for RAGus.ai (mentioned on this page)
const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "RAGus.ai",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web",
  "description": lang === 'cs' 
    ? "RAG-as-a-Service platforma pro AI agentury a enterprise týmy"
    : "RAG-as-a-Service platform for AI agencies and enterprise teams",
  "url": "https://ragus.ai",
  "offers": {
    "@type": "Offer",
    "price": "49.99",
    "priceCurrency": "USD",
    "priceValidUntil": "2025-12-31"
  },
  "creator": {
    "@type": "Organization",
    "name": "HypeDigitaly"
  }
};
---

<PageLayout 
  title={pageTitle}
  description={pageDescription}
  lang={lang}
  showCalendar={false}
>
  <!-- Service Structured Data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  
  <!-- Breadcrumb Structured Data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  
  <!-- RAGus.ai Software Structured Data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
  <!-- ==================== HERO SECTION ==================== -->
  <section class="relative max-w-7xl mx-auto px-4 sm:px-6 pt-12 pb-24 overflow-hidden">
    <div class="text-center max-w-5xl mx-auto relative z-10">
      
      <!-- Badge -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.1s_both] inline-flex items-center gap-2 px-4 py-2 rounded-full bg-orange-500/10 border border-orange-500/20 mb-8" aria-hidden="true">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-orange-400" aria-hidden="true"><path d="M12 15a4 4 0 1 0 0-8a4 4 0 0 0 0 8Z"/><path fill-rule="evenodd" d="M12 1C6.477 1 2 5.477 2 11c0 4.135 2.52 7.682 6.11 9.194l-.24 1.683A1 1 0 0 0 8.86 23h6.28a1 1 0 0 0 .99-1.123l-.24-1.683C19.48 18.682 22 15.135 22 11c0-5.523-4.477-10-10-10Zm0 2a8 8 0 0 0-8 8c0 3.51 2.264 6.49 5.43 7.58a1 1 0 0 1 .68.953l.21 1.467h3.36l.21-1.467a1 1 0 0 1 .68-.953C17.736 17.49 20 14.51 20 11a8 8 0 0 0-8-8Z" clip-rule="evenodd"/></svg>
        <span class="text-sm font-medium text-orange-400">{t.dataprep_hero_badge}</span>
      </div>
      
      <!-- Headline -->
      <h1 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-4xl font-medium text-white tracking-tighter mb-8">
        <span>{t.dataprep_hero_headline_1}</span>
        <br class="hidden md:block">
        <span class="text-neutral-400 transition-colors hover:text-orange-400 duration-500">{t.dataprep_hero_headline_2}</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg md:text-xl text-neutral-400 font-light max-w-3xl mx-auto leading-relaxed tracking-tight mb-6">
        {t.dataprep_hero_subheadline}
      </p>
      
      <!-- Sub-subheadline -->
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.35s_both] text-base text-neutral-400 font-medium max-w-2xl mx-auto leading-relaxed mb-12">
        {t.dataprep_hero_subheadline_2}
      </p>
      
      <!-- Hero CTA -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] max-w-md mx-auto mb-8">
        <a href={href("/kontakt")} class="shiny-cta group">
          <span class="btn-content">
            <span class="text-lg font-semibold tracking-tight">{t.dataprep_hero_cta}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-white/80 group-hover:translate-x-1 transition-transform">
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </span>
        </a>
      </div>
      
      <!-- Trust Signals -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] flex flex-wrap items-center justify-center gap-6 text-sm text-neutral-400 font-medium">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-orange-400" aria-hidden="true"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12c5.16-1.26 9-6.45 9-12V5l-9-4Zm0 2.18l7 3.12v4.7c0 4.41-3.03 8.53-7 9.6c-3.97-1.07-7-5.19-7-9.6v-4.7l7-3.12Z"/><path d="M11 14.17l4.59-4.58L17 11l-6 6l-3.5-3.5l1.41-1.41L11 14.17Z"/></svg>
          <span>{t.dataprep_trust_1}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-orange-400" aria-hidden="true"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12c5.16-1.26 9-6.45 9-12V5l-9-4Zm0 2.18l7 3.12v4.7c0 4.41-3.03 8.53-7 9.6c-3.97-1.07-7-5.19-7-9.6v-4.7l7-3.12Z"/><path d="M11 14.17l4.59-4.58L17 11l-6 6l-3.5-3.5l1.41-1.41L11 14.17Z"/></svg>
          <span>{t.dataprep_trust_2}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-orange-400" aria-hidden="true"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12c5.16-1.26 9-6.45 9-12V5l-9-4Zm0 2.18l7 3.12v4.7c0 4.41-3.03 8.53-7 9.6c-3.97-1.07-7-5.19-7-9.6v-4.7l7-3.12Z"/><path d="M11 14.17l4.59-4.58L17 11l-6 6l-3.5-3.5l1.41-1.41L11 14.17Z"/></svg>
          <span>{t.dataprep_trust_3}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== PROCESS SECTION (MOVED UP) ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24 overflow-x-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-400 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">01</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40">{t.dataprep_process_tag}</div>
        <div class="hidden md:block text-right">{t.dataprep_process_label}</div>
      </div>

      <div class="text-center max-w-5xl mx-auto mb-16">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-5xl lg:text-6xl text-3xl font-medium text-white tracking-tighter mb-8">
          <span>{t.dataprep_process_headline_1}</span>
          <span class="text-neutral-500 transition-colors hover:text-orange-400 duration-500"> {t.dataprep_process_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-2xl mx-auto leading-relaxed">
          {t.dataprep_process_desc}
        </p>
      </div>

      <!-- Process Steps -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-orange-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-400 mb-4" aria-hidden="true">
            <iconify-icon icon="solar:magnifer-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
          </div>
          <div class="text-xs text-orange-400 font-bold mb-2">KROK 1</div>
          <h3 class="text-lg font-bold text-white mb-2">{t.dataprep_step_1_title}</h3>
          <p class="text-sm text-neutral-400 leading-relaxed">{t.dataprep_step_1_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-orange-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-400 mb-4" aria-hidden="true">
            <iconify-icon icon="solar:broom-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
          </div>
          <div class="text-xs text-orange-400 font-bold mb-2">KROK 2</div>
          <h3 class="text-lg font-bold text-white mb-2">{t.dataprep_step_2_title}</h3>
          <p class="text-sm text-neutral-400 leading-relaxed">{t.dataprep_step_2_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-orange-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-400 mb-4" aria-hidden="true">
            <iconify-icon icon="solar:magic-stick-3-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
          </div>
          <div class="text-xs text-orange-400 font-bold mb-2">KROK 3</div>
          <h3 class="text-lg font-bold text-white mb-2">{t.dataprep_step_3_title}</h3>
          <p class="text-sm text-neutral-400 leading-relaxed">{t.dataprep_step_3_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-orange-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-400 mb-4" aria-hidden="true">
            <iconify-icon icon="solar:database-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
          </div>
          <div class="text-xs text-orange-400 font-bold mb-2">KROK 4</div>
          <h3 class="text-lg font-bold text-white mb-2">{t.dataprep_step_4_title}</h3>
          <p class="text-sm text-neutral-400 leading-relaxed">{t.dataprep_step_4_desc}</p>
        </div>
      </div>

      <!-- Formats Banner -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.8s_both] p-6 bg-gradient-to-r from-orange-500/10 via-[#0A0A0A] to-orange-500/5 border border-orange-500/20 rounded-2xl">
        <div class="flex flex-col md:flex-row items-center gap-6">
          <div class="w-16 h-16 rounded-2xl bg-orange-500/20 flex items-center justify-center text-orange-400 flex-shrink-0" aria-hidden="true">
            <iconify-icon icon="solar:file-smile-bold" class="text-3xl" aria-hidden="true"></iconify-icon>
          </div>
          <div class="text-center md:text-left">
            <h3 class="text-xl font-bold text-white mb-2">{t.dataprep_formats_title}</h3>
            <p class="text-neutral-400">{t.dataprep_formats_desc}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== PROBLEM SECTION ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24 overflow-x-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-400 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">02</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40">{t.dataprep_problem_tag}</div>
        <div class="hidden md:block text-right">{t.dataprep_problem_label}</div>
      </div>

      <div class="text-center max-w-5xl mx-auto mb-16">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-3xl font-medium text-white tracking-tighter mb-8">
          <span>{t.dataprep_problem_headline_1}</span>
          <span class="text-neutral-500 transition-colors hover:text-orange-400 duration-500"> {t.dataprep_problem_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-2xl mx-auto leading-relaxed">
          {t.dataprep_problem_desc}
        </p>
      </div>

      <!-- Pain Points Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-red-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-red-500/10 flex items-center justify-center text-red-400 mb-4" aria-hidden="true">
            <iconify-icon icon="solar:folder-error-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">{t.dataprep_pain_1_title}</h3>
          <p class="text-sm text-neutral-400 leading-relaxed">{t.dataprep_pain_1_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-orange-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-400 mb-4" aria-hidden="true">
            <iconify-icon icon="solar:copy-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">{t.dataprep_pain_2_title}</h3>
          <p class="text-sm text-neutral-400 leading-relaxed">{t.dataprep_pain_2_desc}</p>
        </div>

        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-yellow-500/30 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-yellow-500/10 flex items-center justify-center text-yellow-400 mb-4" aria-hidden="true">
            <iconify-icon icon="solar:ghost-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">{t.dataprep_pain_3_title}</h3>
          <p class="text-sm text-neutral-400 leading-relaxed">{t.dataprep_pain_3_desc}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== DATA COMPARISON SECTION ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24 overflow-x-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 overflow-hidden">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-400 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">03</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40">{t.dataprep_comparison_tag}</div>
        <div class="hidden md:block text-right">{t.dataprep_comparison_label}</div>
      </div>

      <div class="text-center max-w-5xl mx-auto mb-16">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-5xl lg:text-6xl text-3xl font-medium text-white tracking-tighter mb-8">
          <span>{t.dataprep_comparison_headline_1}</span>
          <span class="text-neutral-500 transition-colors hover:text-orange-400 duration-500"> {t.dataprep_comparison_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-2xl mx-auto leading-relaxed">
          {t.dataprep_comparison_desc}
        </p>
      </div>

      <!-- Code Comparison -->
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- BAD Data - Plain unstructured text -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-xl bg-red-500/20 flex items-center justify-center">
              <iconify-icon icon="solar:close-circle-bold" class="text-red-400 text-xl"></iconify-icon>
            </div>
            <div>
              <h3 class="text-lg font-bold text-white">{t.dataprep_bad_title}</h3>
              <p class="text-sm text-neutral-400">{t.dataprep_bad_desc}</p>
            </div>
          </div>
          <div class="relative rounded-2xl overflow-hidden border border-red-500/20 bg-[#0d0d0d]">
            <div class="flex items-center gap-2 px-4 py-3 bg-red-500/5 border-b border-red-500/10">
              <div class="flex gap-1.5">
                <div class="w-3 h-3 rounded-full bg-red-500/40"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/40"></div>
                <div class="w-3 h-3 rounded-full bg-green-500/40"></div>
              </div>
              <span class="text-xs text-neutral-400 ml-2 font-mono">raw_data.txt</span>
            </div>
            <pre class="p-3 sm:p-4 overflow-x-auto text-xs sm:text-sm font-mono leading-relaxed max-w-full"><code class="text-neutral-400 whitespace-pre-wrap break-words">{`Úřední hodiny pondělí 8-17 úterý zavřeno 
středa 8-12 a 13-17 Úřední hodiny: Po 
8:00-17:00, Út: zavřeno, St: 8-12, 13-17
ÚŘEDNÍ HODINY pondělí osmá až sedmnáctá
Otevírací doba: Po 8-17 městský úřad
otevřeno od 8 do 5 odpoledne v pondělí
úterý je zavíračka středa půlden a pak
znovu od jedný hodiny odpoledne kontakt
tel. 123456789 nebo email info@mě...`}</code></pre>
