      </div>

      <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] text-4xl md:text-5xl font-medium text-white tracking-tight mb-6">
        <span data-i18n="chatbot_benefits_headline_1">{t.chatbot_benefits_headline_1}</span>
        <br>
        <span class="text-neutral-600" data-i18n="chatbot_benefits_headline_2">{t.chatbot_benefits_headline_2}</span>
      </h2>

      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 max-w-3xl mb-16" data-i18n="chatbot_benefits_desc">
        {t.chatbot_benefits_desc}
      </p>

      <!-- Benefits Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Benefit 1 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:wallet-money-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_1_title">{t.benefit_1_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_1_desc">
            {t.benefit_1_desc}
          </p>
        </div>

        <!-- Benefit 2 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:clock-circle-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_2_title">{t.benefit_2_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_2_desc">
            {t.benefit_2_desc}
          </p>
        </div>

        <!-- Benefit 3 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:emoji-funny-circle-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_3_title">{t.benefit_3_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_3_desc">
            {t.benefit_3_desc}
          </p>
        </div>

        <!-- Benefit 4 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:settings-minimalistic-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_4_title">{t.benefit_4_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_4_desc">
            {t.benefit_4_desc}
          </p>
        </div>

        <!-- Benefit 5 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:graph-up-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_5_title">{t.benefit_5_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_5_desc">
            {t.benefit_5_desc}
          </p>
        </div>

        <!-- Benefit 6 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.8s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:medal-star-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_6_title">{t.benefit_6_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_6_desc">
            {t.benefit_6_desc}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== FAQ SECTION ==================== -->
  <section id="faq" class="bg-[#050505] border-t border-white/5 py-24">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Section Header -->
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">03</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40" data-i18n="chatbot_faq_tag">{t.chatbot_faq_tag}</div>
        <div class="hidden md:block text-right">FAQ</div>
      </div>

      <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] text-4xl md:text-5xl font-medium text-white tracking-tight mb-16">
        <span data-i18n="chatbot_faq_headline">{t.chatbot_faq_headline}</span>
      </h2>

      <!-- FAQ Items -->
      <div class="space-y-4">
        <!-- FAQ 1 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] faq-item bg-[#0A0A0A] border border-white/5 rounded-xl overflow-hidden">
          <button class="faq-trigger w-full flex items-center justify-between p-6 text-left">
            <span class="text-lg font-medium text-white" data-i18n="chatbot_faq_1_q">{t.chatbot_faq_1_q}</span>
            <iconify-icon icon="solar:alt-arrow-down-linear" class="faq-icon text-neutral-400 text-xl transition-transform duration-300"></iconify-icon>
          </button>
          <div class="faq-answer">
            <div class="px-6 pb-6 text-neutral-400" data-i18n="chatbot_faq_1_a">
              {t.chatbot_faq_1_a}
            </div>
          </div>
        </div>

        <!-- FAQ 2 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] faq-item bg-[#0A0A0A] border border-white/5 rounded-xl overflow-hidden">
          <button class="faq-trigger w-full flex items-center justify-between p-6 text-left">
            <span class="text-lg font-medium text-white" data-i18n="chatbot_faq_2_q">{t.chatbot_faq_2_q}</span>
            <iconify-icon icon="solar:alt-arrow-down-linear" class="faq-icon text-neutral-400 text-xl transition-transform duration-300"></iconify-icon>
          </button>
          <div class="faq-answer">
            <div class="px-6 pb-6 text-neutral-400" data-i18n="chatbot_faq_2_a">
              {t.chatbot_faq_2_a}
            </div>
          </div>
        </div>

        <!-- FAQ 3 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] faq-item bg-[#0A0A0A] border border-white/5 rounded-xl overflow-hidden">
          <button class="faq-trigger w-full flex items-center justify-between p-6 text-left">
            <span class="text-lg font-medium text-white" data-i18n="chatbot_faq_3_q">{t.chatbot_faq_3_q}</span>
            <iconify-icon icon="solar:alt-arrow-down-linear" class="faq-icon text-neutral-400 text-xl transition-transform duration-300"></iconify-icon>
          </button>
          <div class="faq-answer">
            <div class="px-6 pb-6 text-neutral-400" data-i18n="chatbot_faq_3_a">
