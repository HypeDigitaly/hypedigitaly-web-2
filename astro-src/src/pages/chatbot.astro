            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== CONTACT SECTION ==================== -->
  <section id="kontakt" class="bg-[#080808] border-t border-white/5 py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <!-- Section Header -->
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">04</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40" data-i18n="chatbot_contact_tag">{t.chatbot_contact_tag}</div>
        <div class="hidden md:block text-right" data-i18n="chatbot_contact_label">{t.chatbot_contact_label}</div>
      </div>

      <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] text-4xl md:text-5xl font-medium text-white tracking-tight mb-6" data-i18n="chatbot_contact_headline">
        {t.chatbot_contact_headline}
      </h2>

      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 max-w-2xl mx-auto mb-12" data-i18n="chatbot_contact_desc">
        {t.chatbot_contact_desc}
      </p>

      <!-- CTA Button -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] max-w-md mx-auto mb-12">
