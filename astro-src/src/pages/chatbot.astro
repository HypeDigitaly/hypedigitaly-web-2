---
import PageLayout from '../layouts/PageLayout.astro';
import ClientsMarquee from '../components/sections/ClientsMarquee.astro';
import DataPreparationSection from '../components/sections/DataPreparationSection.astro';
import TestimonialsSection from '../components/sections/TestimonialsSection.astro';
import { translations, type Language } from '../scripts/translations';

const lang: Language = 'cs';
const t = translations[lang];
---

<PageLayout 
  title="AI Chatbot | HypeDigitaly - Nejlepší AI chatbot v ČR"
  description="Inteligentní AI chatbot s 90%+ přesností odpovědí. První v ČR nasazený na krajských webech. Automatizujte zákaznickou podporu 24/7."
  lang={lang}
  showCalendar={false}
>
  <!-- ==================== HERO SECTION ==================== -->
  <section class="relative max-w-7xl mx-auto px-6 pt-12 pb-24 overflow-hidden">
    <div class="text-center max-w-5xl mx-auto relative z-10">
      
      <!-- Badge -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.1s_both] inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-8">
        <iconify-icon icon="solar:cup-star-bold" class="text-primary text-lg"></iconify-icon>
        <span class="text-sm font-medium text-primary" data-i18n="chatbot_hero_badge">{t.chatbot_hero_badge}</span>
      </div>
      
      <!-- Headline -->
      <h1 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-4xl font-medium text-white tracking-tighter mb-8">
        <span data-i18n="chatbot_hero_headline_1">{t.chatbot_hero_headline_1}</span>
        <br class="hidden md:block">
        <span class="text-neutral-600 transition-colors hover:text-primary duration-500" data-i18n="chatbot_hero_headline_2">{t.chatbot_hero_headline_2}</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg md:text-xl text-neutral-400 font-light max-w-3xl mx-auto leading-relaxed tracking-tight mb-6" data-i18n="chatbot_hero_subheadline">
        {t.chatbot_hero_subheadline}
      </p>
      
      <!-- Sub-subheadline -->
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.35s_both] text-base text-neutral-500 font-medium max-w-2xl mx-auto leading-relaxed mb-12" data-i18n="chatbot_hero_subheadline_2">
        {t.chatbot_hero_subheadline_2}
      </p>
      
      <!-- Hero CTA -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] max-w-md mx-auto mb-8">
        <a href="#kontakt" class="shiny-cta group">
          <span class="btn-content">
            <span class="text-lg font-semibold tracking-tight" data-i18n="chatbot_hero_cta">{t.chatbot_hero_cta}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-white/80 group-hover:translate-x-1 transition-transform">
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </span>
        </a>
      </div>
      
      <!-- Trust Signals -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] flex flex-wrap items-center justify-center gap-6 text-sm text-neutral-500 font-medium mb-16">
        <div class="flex items-center gap-2">
          <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
          <span data-i18n="chatbot_trust_1">{t.chatbot_trust_1}</span>
        </div>
        <div class="flex items-center gap-2">
          <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
          <span data-i18n="chatbot_trust_2">{t.chatbot_trust_2}</span>
        </div>
        <div class="flex items-center gap-2">
          <iconify-icon icon="solar:check-circle-bold" class="text-primary text-lg"></iconify-icon>
          <span data-i18n="chatbot_trust_3">{t.chatbot_trust_3}</span>
        </div>
      </div>

      <!-- Video Demo -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] max-w-4xl mx-auto">
        <div class="aspect-video rounded-2xl overflow-hidden border border-white/10 shadow-2xl bg-gray-900">
          <iframe width="100%" height="100%" src="https://www.youtube.com/embed/cECRY6dQ0NA?si=X2KP-eES5s3jNVm7&amp;start=11" title="AI Chatbot Demo" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen loading="lazy"></iframe>
        </div>
        
        <!-- First in CZ Badge -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both] mt-8 flex items-center gap-4 p-5 bg-gradient-to-r from-primary/10 to-transparent border border-primary/20 rounded-xl">
          <div class="w-14 h-14 rounded-xl bg-primary/20 flex items-center justify-center text-primary flex-shrink-0">
            <iconify-icon icon="solar:cup-star-bold" class="text-2xl"></iconify-icon>
          </div>
          <div>
            <h3 class="text-lg font-bold text-white mb-1" data-i18n="first_title">{t.first_title}</h3>
            <p class="text-sm text-neutral-400 leading-relaxed" data-i18n="first_desc">{t.first_desc}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== TRUSTED BY SECTION ==================== -->
  <ClientsMarquee lang={lang} title="NASAZENO NA WEBECH ČESKÝCH KRAJŮ" />

  <!-- ==================== PROVEN RESULTS SECTION ==================== -->
  <section class="bg-[#080808] border-t border-white/5 py-16">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Section Header -->
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-12 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <iconify-icon icon="solar:chart-2-bold" class="text-primary text-lg"></iconify-icon>
        </div>
        <div class="text-white/40" data-i18n="chatbot_results_tag">{t.chatbot_results_tag}</div>
        <div class="hidden md:block text-right" data-i18n="chatbot_results_label">{t.chatbot_results_label}</div>
      </div>

      <div class="text-center mb-10">
        <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] text-3xl md:text-4xl font-medium text-white tracking-tight mb-4">
          <span data-i18n="chatbot_results_headline_1">{t.chatbot_results_headline_1}</span>
          <span class="text-neutral-600" data-i18n="chatbot_results_headline_2"> {t.chatbot_results_headline_2}</span>
        </h2>
        <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-neutral-400 max-w-2xl mx-auto" data-i18n="chatbot_results_desc">
          {t.chatbot_results_desc}
        </p>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 mb-8">
        <!-- Stat 1 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] p-6 bg-[#0A0A0A] border border-white/5 rounded-xl text-center hover:border-primary/30 transition-all duration-300">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2" data-i18n="chatbot_results_stat_1">{t.chatbot_results_stat_1}</div>
          <div class="text-sm text-neutral-500" data-i18n="chatbot_results_stat_1_label">{t.chatbot_results_stat_1_label}</div>
        </div>
        <!-- Stat 2 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] p-6 bg-[#0A0A0A] border border-white/5 rounded-xl text-center hover:border-primary/30 transition-all duration-300">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2" data-i18n="chatbot_results_stat_2">{t.chatbot_results_stat_2}</div>
          <div class="text-sm text-neutral-500" data-i18n="chatbot_results_stat_2_label">{t.chatbot_results_stat_2_label}</div>
        </div>
        <!-- Stat 3 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] p-6 bg-[#0A0A0A] border border-white/5 rounded-xl text-center hover:border-primary/30 transition-all duration-300">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2" data-i18n="chatbot_results_stat_3">{t.chatbot_results_stat_3}</div>
          <div class="text-sm text-neutral-500" data-i18n="chatbot_results_stat_3_label">{t.chatbot_results_stat_3_label}</div>
        </div>
        <!-- Stat 4 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] p-6 bg-[#0A0A0A] border border-white/5 rounded-xl text-center hover:border-primary/30 transition-all duration-300">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2" data-i18n="chatbot_results_stat_4">{t.chatbot_results_stat_4}</div>
          <div class="text-sm text-neutral-500" data-i18n="chatbot_results_stat_4_label">{t.chatbot_results_stat_4_label}</div>
        </div>
      </div>

      <!-- Note -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both] flex items-center justify-center gap-3 text-sm text-neutral-500">
        <iconify-icon icon="solar:moon-bold" class="text-primary text-lg"></iconify-icon>
        <span data-i18n="chatbot_results_note">{t.chatbot_results_note}</span>
      </div>
    </div>
  </section>

  <!-- ==================== FEATURES SECTION ==================== -->
  <section class="bg-[#050505] border-t border-white/5 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Section Header -->
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">01</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40" data-i18n="chatbot_features_tag">{t.chatbot_features_tag}</div>
        <div class="hidden md:block text-right" data-i18n="chatbot_features_label">{t.chatbot_features_label}</div>
      </div>

      <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] text-4xl md:text-5xl font-medium text-white tracking-tight mb-6">
        <span data-i18n="chatbot_features_headline_1">{t.chatbot_features_headline_1}</span>
        <br>
        <span class="text-neutral-600" data-i18n="chatbot_features_headline_2">{t.chatbot_features_headline_2}</span>
      </h2>
      
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 max-w-3xl mb-16" data-i18n="chatbot_features_desc">
        {t.chatbot_features_desc}
      </p>

      <!-- Horizontal Layout: Features Grid + Video -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
        
        <!-- LEFT: Features Grid (2x4 on desktop) -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- Feature 1 -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:target-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f1_title">{t.chatbot_f1_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f1_desc">{t.chatbot_f1_desc}</p>
          </div>

          <!-- Feature 2 -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:refresh-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f2_title">{t.chatbot_f2_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f2_desc">{t.chatbot_f2_desc}</p>
          </div>

          <!-- Feature 3 -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:clock-circle-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f3_title">{t.chatbot_f3_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f3_desc">{t.chatbot_f3_desc}</p>
          </div>

          <!-- Feature 4 -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:globus-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f4_title">{t.chatbot_f4_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f4_desc">{t.chatbot_f4_desc}</p>
          </div>

          <!-- Feature 5 -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:chart-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f5_title">{t.chatbot_f5_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f5_desc">{t.chatbot_f5_desc}</p>
          </div>

          <!-- Feature 6 -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.8s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:shield-check-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f6_title">{t.chatbot_f6_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f6_desc">{t.chatbot_f6_desc}</p>
          </div>

          <!-- Feature 7 - Voice Input -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.9s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:microphone-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f7_title">{t.chatbot_f7_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f7_desc">{t.chatbot_f7_desc}</p>
          </div>

          <!-- Feature 8 - GDPR -->
          <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_1s_both] group relative p-5 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-primary/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-3">
              <iconify-icon icon="solar:document-bold" class="text-xl"></iconify-icon>
            </div>
            <h3 class="text-lg font-semibold text-white mb-1" data-i18n="chatbot_f8_title">{t.chatbot_f8_title}</h3>
            <p class="text-xs text-neutral-500 leading-relaxed" data-i18n="chatbot_f8_desc">{t.chatbot_f8_desc}</p>
          </div>
        </div>

        <!-- RIGHT: Video Demo -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] lg:sticky lg:top-32 flex justify-center">
          <div class="relative rounded-[2.5rem] overflow-hidden shadow-2xl w-fit mx-auto">
            <!-- Video Container with aspect ratio -->
            <div class="aspect-[9/16] max-h-[600px] lg:max-h-[800px]">
              <video 
                class="w-full h-full object-cover"
                autoplay 
                muted 
                loop 
                playsinline
                poster="/assets/images/clients/KralovehradeckyKraj_Logo_Krakonos.png"
              >
                <source src="/assets/videos/krakonos.mp4" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
            <!-- Video Overlay Gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent pointer-events-none"></div>
            <!-- Video Badge -->
            <div class="absolute bottom-6 left-6 flex items-center gap-2 px-4 py-2 rounded-full bg-black/40 backdrop-blur-xl border border-white/5">
              <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
              <span class="text-xs font-medium text-white/90 uppercase tracking-wider">Krakonoš AI</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ==================== BENEFITS SECTION ==================== -->
  <section class="bg-[#080808] border-t border-white/5 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Section Header -->
      <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-500 uppercase tracking-[0.2em] gap-4">
        <div class="flex items-center gap-2">
          <span class="text-white">02</span>
          <span class="w-12 h-px bg-white/10"></span>
        </div>
        <div class="text-white/40" data-i18n="chatbot_benefits_tag">{t.chatbot_benefits_tag}</div>
        <div class="hidden md:block text-right" data-i18n="chatbot_benefits_label">{t.chatbot_benefits_label}</div>
      </div>

      <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] text-4xl md:text-5xl font-medium text-white tracking-tight mb-6">
        <span data-i18n="chatbot_benefits_headline_1">{t.chatbot_benefits_headline_1}</span>
        <br>
        <span class="text-neutral-600" data-i18n="chatbot_benefits_headline_2">{t.chatbot_benefits_headline_2}</span>
      </h2>

      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 max-w-3xl mb-16" data-i18n="chatbot_benefits_desc">
        {t.chatbot_benefits_desc}
      </p>

      <!-- Benefits Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Benefit 1 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:wallet-money-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_1_title">{t.benefit_1_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_1_desc">
            {t.benefit_1_desc}
          </p>
        </div>

        <!-- Benefit 2 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:clock-circle-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_2_title">{t.benefit_2_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_2_desc">
            {t.benefit_2_desc}
          </p>
        </div>

        <!-- Benefit 3 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:emoji-funny-circle-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_3_title">{t.benefit_3_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_3_desc">
            {t.benefit_3_desc}
          </p>
        </div>

        <!-- Benefit 4 -->
        <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both]">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <iconify-icon icon="solar:settings-minimalistic-bold" class="text-primary text-xl"></iconify-icon>
            </div>
            <h3 class="text-xl font-semibold text-white" data-i18n="benefit_4_title">{t.benefit_4_title}</h3>
          </div>
          <p class="text-neutral-400 text-sm leading-relaxed" data-i18n="benefit_4_desc">
            {t.benefit_4_desc}
          </p>
