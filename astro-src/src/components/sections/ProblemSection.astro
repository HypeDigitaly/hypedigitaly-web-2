---
/**
 * ProblemSection.astro
 * 
 * Reusable "Z jakého důvodu organizace s AI neuspějí" / "Why Organizations Fail with AI" section.
 * Shows the 3 main pain points/problems.
 * 
 * Features:
 * - 3-card grid showing pain points
 * - Color-coded icons (red, orange, yellow)
 * - Hover animations with border color change
 */
import { translations, type Language } from '../../scripts/translations';

interface Props {
  lang: Language;
  sectionNumber?: string;
  className?: string;
}

const { lang, sectionNumber = '04', className = '' } = Astro.props;
const t = translations[lang];
---

<section class:list={["bg-[#050505] border-t border-white/5 py-24", className]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    {/* Section Header */}
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-400 uppercase tracking-[0.2em] gap-4">
      <div class="flex items-center gap-2">
        <span class="text-white">{sectionNumber}</span>
        <span class="w-12 h-px bg-white/10"></span>
      </div>
      <div class="text-white/40">{t.problem_tag}</div>
      <div class="hidden md:block text-right">{t.problem_label}</div>
    </div>

    <div class="text-center max-w-5xl mx-auto mb-16">
      <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-3xl font-medium text-white tracking-tighter mb-8">
        <span>{t.problem_headline}</span>
        <span class="text-neutral-400 transition-colors hover:text-primary duration-500">{t.problem_headline_2}</span>
      </h2>
      <p class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-lg text-neutral-400 font-light max-w-2xl mx-auto leading-relaxed">
        {t.problem_subheadline}
      </p>
    </div>

    {/* Pain Points Grid */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-red-500/30 transition-all duration-300">
        <div class="w-12 h-12 rounded-xl bg-red-500/10 flex items-center justify-center text-red-400 mb-4" aria-hidden="true">
          <iconify-icon icon="solar:database-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
        </div>
        <h3 class="text-xl font-semibold text-white mb-3">{t.pain_1_title}</h3>
        <p class="text-sm text-neutral-400 leading-relaxed">{t.pain_1_desc}</p>
      </div>

      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-orange-500/30 transition-all duration-300">
        <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-400 mb-4" aria-hidden="true">
          <iconify-icon icon="solar:settings-minimalistic-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
        </div>
        <h3 class="text-xl font-semibold text-white mb-3">{t.pain_2_title}</h3>
        <p class="text-sm text-neutral-400 leading-relaxed">{t.pain_2_desc}</p>
      </div>

      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] group relative p-6 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-yellow-500/30 transition-all duration-300">
        <div class="w-12 h-12 rounded-xl bg-yellow-500/10 flex items-center justify-center text-yellow-400 mb-4" aria-hidden="true">
          <iconify-icon icon="solar:chart-square-bold" class="text-2xl" aria-hidden="true"></iconify-icon>
        </div>
        <h3 class="text-xl font-semibold text-white mb-3">{t.pain_3_title}</h3>
        <p class="text-sm text-neutral-400 leading-relaxed">{t.pain_3_desc}</p>
      </div>
    </div>
  </div>
</section>









