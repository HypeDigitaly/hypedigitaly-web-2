---
import { translations, type Language } from '../../scripts/translations';

export interface Props {
  lang: Language;
  sectionNumber?: string;
  id?: string;
}

const { lang, sectionNumber = "06", id = "reference" } = Astro.props;
const t = translations[lang];
---

<section id={id} class="bg-[#050505] border-t border-white/5 py-24">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 text-[10px] md:text-xs font-mono text-neutral-400 uppercase tracking-[0.2em] gap-4">
      <div class="flex items-center gap-2">
        <span class="text-white">{sectionNumber}</span>
        <span class="w-12 h-px bg-white/10"></span>
      </div>
      <div class="text-white/40">{t.testimonials_tag}</div>
      <div class="hidden md:block text-right">{t.testimonials_label}</div>
    </div>

    <div class="text-center max-w-5xl mx-auto mb-16">
      <h2 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both] leading-[0.95] md:text-6xl lg:text-7xl text-3xl font-medium text-white tracking-tighter mb-8">
        <span>{t.testimonials_headline_1}</span>
        <span class="text-neutral-400 transition-colors hover:text-primary duration-500">{t.testimonials_headline_2}</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Testimonial 1: Královéhradecký kraj -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-white/10 transition-all">
        <div class="flex items-center gap-1 mb-4">
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
        </div>
        <p class="text-neutral-300 mb-6 leading-relaxed">"{t.testimonial_1_quote}"</p>
        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-primary/10 rounded-lg text-primary text-sm font-medium mb-6">
          <iconify-icon icon="solar:chat-round-dots-bold"></iconify-icon>
          <span>9,500+ zpracovaných zpráv</span>
        </div>
        <div class="flex items-center gap-4">
          <a href="https://www.khk.cz/" target="_blank" class="hover:opacity-80 transition-opacity">
            <img src="/assets/images/clients/KralovehradeckyKraj_Logo_Krakonos.png" alt="Královéhradecký kraj" class="h-10 brightness-0 invert">
          </a>
          <div>
            <div class="font-semibold text-white">Bohumil Pecold</div>
            <div class="text-sm text-neutral-400">{t.testimonial_1_role}</div>
          </div>
        </div>
      </div>

      <!-- Testimonial 2: Středočeský kraj -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both] p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-white/10 transition-all">
        <div class="flex items-center gap-1 mb-4">
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
        </div>
        <p class="text-neutral-300 mb-6 leading-relaxed">"{t.testimonial_2_quote}"</p>
        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-primary/10 rounded-lg text-primary text-sm font-medium mb-6">
          <iconify-icon icon="solar:rocket-bold"></iconify-icon>
          <span>{t.testimonial_2_impact}</span>
        </div>
        <div class="flex items-center gap-4">
          <a href="https://www.kr-stredocesky.cz/" target="_blank" class="hover:opacity-80 transition-opacity">
            <img src="/assets/images/clients/Stredocesky_kraj_logo.jpg" alt="Středočeský kraj" class="h-10">
          </a>
          <div>
            <div class="font-semibold text-white">Ondřej Šimíček</div>
            <div class="text-sm text-neutral-400">{t.testimonial_2_role}</div>
          </div>
        </div>
      </div>

      <!-- Testimonial 3: Kraj Vysočina -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.5s_both] p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-white/10 transition-all">
        <div class="flex items-center gap-1 mb-4">
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
        </div>
        <p class="text-neutral-300 mb-6 leading-relaxed">"{t.testimonial_3_quote}"</p>
        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-primary/10 rounded-lg text-primary text-sm font-medium mb-6">
          <iconify-icon icon="solar:medal-ribbons-star-bold"></iconify-icon>
          <span>{t.testimonial_3_impact}</span>
        </div>
        <div class="flex items-center gap-4">
          <a href="https://www.kr-vysocina.cz/" target="_blank" class="hover:opacity-80 transition-opacity">
            <img src="/assets/images/clients/KrajVysocina_Logo.png" alt="Kraj Vysočina" class="h-10">
          </a>
          <div>
            <div class="font-semibold text-white">Petr Pavlinec</div>
            <div class="text-sm text-neutral-400">{t.testimonial_3_role}</div>
          </div>
        </div>
      </div>

      <!-- Testimonial 4: Ústecký kraj -->
      <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.6s_both] p-8 bg-[#0A0A0A] border border-white/5 rounded-2xl hover:border-white/10 transition-all">
        <div class="flex items-center gap-1 mb-4">
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
          <iconify-icon icon="solar:star-bold" class="text-yellow-400"></iconify-icon>
        </div>
        <p class="text-neutral-300 mb-6 leading-relaxed">"{t.testimonial_4_quote}"</p>
        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-primary/10 rounded-lg text-primary text-sm font-medium mb-6">
          <iconify-icon icon="solar:clock-circle-bold"></iconify-icon>
          <span>{t.testimonial_4_impact}</span>
        </div>
        <div class="flex items-center gap-4">
          <a href="https://www.kr-ustecky.cz/" target="_blank" class="hover:opacity-80 transition-opacity">
            <img src="/assets/images/clients/UsteckyKrajLogo.png" alt="Ústecký kraj" class="h-10">
          </a>
          <div>
            <div class="font-semibold text-white">Jan Jelínek</div>
            <div class="text-sm text-neutral-400">{t.testimonial_4_role}</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Google Reviews Link -->
    <div class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.7s_both] flex items-center justify-center gap-4 mt-12">
      <a href="https://share.google/gEbUjbWPR1fkgRliy" target="_blank" class="flex items-center gap-2 px-4 py-2 bg-white/5 rounded-lg border border-white/10 hover:bg-white/10 hover:border-white/20 transition-all group">
        <iconify-icon icon="logos:google-icon" class="text-xl"></iconify-icon>
        <span class="text-sm text-neutral-400 group-hover:text-neutral-300">Google Reviews</span>
        <div class="flex items-center gap-1 ml-2">
          <iconify-icon icon="solar:star-bold" class="text-yellow-400 text-sm"></iconify-icon>
          <span class="text-white font-semibold">5.0</span>
        </div>
      </a>
    </div>
  </div>
</section>

